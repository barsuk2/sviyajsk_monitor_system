@model SviyajskMonitorSystem.Models.Person

@{
    ViewData["Title"] = "Create";
}

<div class="main-content" style="    text-align: -webkit-center;">

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Исследователь</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" asp-for="Name" type="text" id="sample3">
            <label asp-validation-for="Name" class="mdl-textfield__label" for="sample3">Имя</label>
          </div>
        </div>

        <div class="">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input asp-for="Surname" class="mdl-textfield__input" asp-for="Name" type="text"  id="sample3">
                <label asp-validation-for="Surname" asp-validation-for="Name" class="mdl-textfield__label" for="sample3">Фамилия</label>
          </div>
        </div>



        <div class="">
            <div class="">
                <button
                class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
                type="submit">Создать</button>
            </div>
        </div>

    </div>
</form>

<div style="    margin-top: 10px;">
    <a asp-action="Index" style="color:#3F51B5">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>